<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical">
    / vertikalni gde slazemo text view, rezultat u njemu imamo linearne layout-e

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:hint = "0"
        android:layout_marginEnd="8dp"/>
    /android:layout_weight="1" -> zbog ovoga ovaj deo zauzme ceo preostali prostor
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2"
        android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="3"
        android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnSqrt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sqrt"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnMS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="MS"
        android:layout_marginEnd="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="5"
        android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="6"
        android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnOn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="^2"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnMR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="MR"
        android:layout_marginEnd="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="7"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="8"
        android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="9"
        android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnOn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="^3"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnCLR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="CLR"
        android:layout_marginEnd="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ln"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnDot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="."
        android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnExp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="e^"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnBSC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="BSC"
        android:layout_marginEnd="8dp" />
    </LinearLayout>

</LinearLayout>